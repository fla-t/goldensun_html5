root=true

## Defaults
## -----------------------------------------------------------------------------
[*]

## Tabulation
indent_style = space
indent_size  = 4

## Lines
end_of_line = lf
insert_final_newline = true
max_line_length = 120

## Other
charset = utf-8

## Files that require 2-space indents
## -----------------------------------------------------------------------------
[{
    *.md,
    package.json,
    package-lock.json,
    npm-shrinkwrap.json
}]
indent_style = space
indent_size = 2